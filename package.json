{
  "name": "markfy",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npm run db:prepare && prisma generate && next build",
    "build:with-seed": "npm run db:prepare && prisma generate && next build && npm run db:seed",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:setup": "./scripts/setup-test-db.sh",
    "test:e2e:full": "npm run test:e2e:setup && npm run test:e2e",
    "postinstall": "npm run db:prepare && prisma generate",
    "db:prepare": "node -e \"if(process.env.NODE_ENV==='production'){require('fs').copyFileSync('prisma/schema.production.prisma','prisma/schema.prisma');console.log('Using PostgreSQL schema for production')}\"",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:seed:prod": "node scripts/seed-production.js",
    "db:studio": "prisma studio"
  },
  "keywords": [
    "bookmarks",
    "fullstack",
    "nextjs",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "description": "A full-stack bookmarks application built with Next.js, TypeScript, and PostgreSQL",
  "dependencies": {
    "@prisma/client": "^6.17.1",
    "@tailwindcss/postcss": "^4.1.14",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "autoprefixer": "^10.4.21",
    "dotenv": "^17.2.3",
    "eslint": "^9.38.0",
    "eslint-config-next": "^15.5.6",
    "lucide-react": "^0.546.0",
    "next": "^15.5.6",
    "postcss": "^8.5.6",
    "prisma": "^6.17.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.9.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.8.1",
    "happy-dom": "^20.0.5",
    "jsdom": "^27.0.1",
    "tsx": "^4.20.6",
    "vitest": "^3.2.4"
  }
}
